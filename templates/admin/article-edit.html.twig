{% extends "templates/base.html.twig" %}
{% block title %}Administration - Modifier un article

{% endblock %}

{% block body %}


	<!-- Page Header -->
	<header class="masthead" style="background-image: url('public/images/')">
		<div class="overlay"></div>
		<div class="container">
			<div class="row">
				<div class="col-lg-8 col-md-10 mx-auto">
					<div class="site-heading">
						<h1>
							Modifier un article
						</h1>
					</div>
				</div>
			</div>
		</div>
	</header>

	<!--Formulaire de modification d'un article-->
	<div class="container mt-5">
		<div class="row">
			<div class="col-lg-8 col-md-10 mx-auto bg-light">
				<h2>Modifier</h2>
				<form class="form-group" action="" method="POST">
					<div class="control-group">
						<hr>
						<div class="form-group ">
							<label>Titre</label>
							<input name="titre" type="text" class="form-control" value=" {{article.title}} ">
						</div>
					</div>
					<div class="control-group">
						<hr>
						<div class="form-group ">
							<label>Chap√¥</label>
							<textarea name="chapo" type="textArea" class="form-control" cols="" rows="3">
								{{article.sentence}}
							</textarea>
						</div>
					</div>
					<div class="form-group">
						<label for="nom">Nom de l'auteur</label>
						<select class="form-control" id="exampleFormControlSelect1">
							<option>{{author.firstName}} {{author.lastName}} </option>
							{% for aut in authors %}
								{% if author.lastName != aut.lastName %}
									<option> {{aut.firstName}} {{aut.lastName}} </option>								
								{% endif %}								
								
							{% endfor %}							
									
						</select>
					</div>
					<div class="control-group">
						<hr>
						<div class="form-group ">
							<label>Article</label>
							<textarea name="chapo" type="textArea" class="form-control" cols="" rows="20">
								{{article.content_article}}
							</textarea>
						</div>
					</div>
					<br>
					<div id="success"></div>
					<div class="form-group">
						<button type="submit" class="btn btn-primary">Modifier</button>
					</div>
				</form>
			</div>
		</div>
	</div>

{% endblock %}
