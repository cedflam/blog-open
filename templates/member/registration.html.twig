{% extends "templates/base.html.twig" %}
{% block title %}
	Inscription
{% endblock %}

{% block body %}

	<!-- Page Header -->
	<header class="masthead" style="background-image: url('public/images/registration.jpg')">
		<div class="overlay"></div>
		<div class="container">
			<div class="row">
				<div class="col-lg-8 col-md-10 mx-auto">
					<div class="site-heading">
						<h1>
							Inscription
						</h1>
						{% if session.message %}
								<p class="bg-{{session.type }} p-3">
									{{session.message}}
								</p>
							{% endif %}
					</div>
				</div>
			</div>
		</div>
	</header>

	<!--Corps -->
	<div class="container">
		<h3 class="text-center mb-5">Formulaire d'inscription</h3>
		<div class="row">
			<div class="col-md-6 mx-auto d-block bg-light p-5">
				<form method="POST">

					<div class="form-group">
						<label for="lastName">Nom</label>
						<input name="lastName" type="text" class="form-control" placeholder="Saisissez votre nom..."  required>
					</div>
					<div class="form-group">
						<label for="firstName">Prénom</label>
						<input name="firstName" type="text" class="form-control" placeholder="Saisissez votre prénom..." required>
					</div>
					<div class="form-group">
						<label for="email">Email</label>
						<input name="email" type="email" class="form-control" placeholder="Saisissez votre email..." required>
					</div>
					<div class="form-group">
						<label for="password">Mot de passe</label>
						<input name="password" type="password" class="form-control" placeholder="Saisissez un mot de passe.." required>
					</div>
					<div class="form-group">
						<label for="confirmPassword">Confirmation mot de passe</label>
						<input name="confirmPassword" type="password" class="form-control" placeholder="Confirmez le mot de passe.." required>
					</div>
					<input type="hidden" name="add_author" value="1">
					<button type="submit" class="btn btn-success">S'inscrire</button>

				</form>
			</div>
		</div>
	</div>

{% endblock %}
