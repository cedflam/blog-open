{% extends "templates/base.html.twig" %}

{% block title %}
	Administration - Ajouter un article
{% endblock %}

{% block body %}
	{% if session.role == 'user' %}

		<!-- Page Header -->
		<header class="masthead" style="background-image: url('public/images/articleAdd.jpg')">
			<div class="overlay"></div>
			<div class="container">
				<div class="row">
					<div class="col-lg-8 col-md-10 mx-auto">
						<div class="site-heading">
							<h1>
								Ajouter un article
							</h1>
						</div>
					</div>
				</div>
			</div>
		</header>

		<!--Formulaire d'ajout d'un article-->
		<div class="container mt-5">
			<div class="row">
				<div class="col-lg-8 col-md-10 mx-auto bg-light">
					<h2>Ajouter un article</h2>
					<form class="form-group" action="{{articleFunction.addArticle}}" method="POST">
						<div class="control-group">
							<hr>
							<div class="form-group ">
								<label>Titre</label>
								<input name="title" type="text" placeholder="Saisir le titre de l'article..." class="form-control text-justify">
							</div>
						</div>
						<div class="form-group">
							<label for="">Auteur</label>
							<select class="form-control" name="id_author">
								
									<option value=" {{author.id_pk_author}}">
										{{author.firstName}}
										{{author.lastName}}
									</option>
								
							</select>
							<input type="hidden" value=" {{author.id_pk_author}} " name="add_article">
						</div>
						<div class="control-group">
							<hr>
							<div class="form-group ">
								<label>Chapô</label>
								<textarea name="sentence" type="textArea" class="form-control text-justify" placeholder="Saisir le chapô..." cols="" rows="3"></textarea>
							</div>
						</div>

						<div class="control-group">
							<hr>
							<div class="form-group ">
								<label>Article</label>
								<textarea name="content_article" type="textArea" class="form-control text-justify" cols="" rows="10"></textarea>
							</div>
						</div>
						<br>
						<div id="success"></div>
						<div class="form-group">
							<button type="submit" class="btn btn-primary">Enregistrer</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	{% else %}
		<!-- Page Header -->
		<header class="masthead" style="background-image: url('public/images/')">
			<div class="overlay"></div>
			<div class="container">
				<div class="row">
					<div class="col-lg-8 col-md-10 mx-auto">
						<div class="site-heading">
							<h1>
								Accès interdit !
							</h1>
						</div>
					</div>
				</div>
			</div>
		</header>
	{% endif %}

{% endblock %}
