{% extends "templates/base.html.twig" %}
{% block title %}Accueil administration
{% endblock %}

{% block body %}

	<!-- Page Header -->
	<header class="masthead" style="background-image: url('public/images/')">
		<div class="overlay"></div>
		<div class="container">
			<div class="row">
				<div class="col-lg-8 col-md-10 mx-auto">
					<div class="site-heading">
						<h1>
							Accueil - Administration
						</h1>
					</div>
				</div>
			</div>
		</div>
	</header>

	<div class="container mt-3">
		<div class="row">
			<div class="col-md-6">
				<div class="card">
					<div class="card-header bg-warning">
						<h4>Gérer les articles</h4>
					</div>
					<div class="card-body">
						<p class="text-justify">
							Sur cette section vous avez la possibilité de gérer les articles. 
							                        Vous pourrez ajouter, modifier ou supprimer un article.
						</p>
					</div>
					<div class="card-footer">
						<a href="?page=articles-list" class="btn btn-info mx-auto d-block">Gestion des articles</a>
					</div>
				</div>
			</div>
			<div class="col-md-6">
				<div class="card">
					<div class="card-header bg-warning">
						<h4>Gérer les commentaires</h4>
					</div>
					<div class="card-body ">
						<p class="text-justify">
							Sur cette section vous avez la possibilité de gérer les commentaires.
							                         Vous pourrez valider, modifier ou supprimer un commentaire.
						</p>
					</div>
					<div class="card-footer">
						<a href="?page=comment-list" class="btn btn-info mx-auto d-block">Gestion des commentaires</a>
					</div>
				</div>
			</div>

		</div>
	</div>

{% endblock %}
